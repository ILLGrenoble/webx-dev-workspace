{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "overrideCommand": false,
  "postCreateCommand": ".devcontainer/install.sh",
  "forwardPorts": [5555, 5556, 5557, 5558],
  "runArgs": ["--privileged"],
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 4
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "vadimcn.vscode-lldb",
        "rust-lang.rust-analyzer"
      ]
    }
  }
}