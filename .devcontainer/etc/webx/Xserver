#!/bin/bash

set -e

export XCURSOR_SIZE=24
SCREEN_WIDTH=4096
SCREEN_HEIGHT=4096

(( WEBX_START_WIDTH > SCREEN_WIDTH )) && SCREEN_WIDTH="$WEBX_START_WIDTH"
(( WEBX_START_HEIGHT > SCREEN_HEIGHT )) && SCREEN_HEIGHT="$WEBX_START_HEIGHT"

echo "Starting Xvfb with dimensions ${SCREEN_WIDTH}x${SCREEN_HEIGHT}"

exec Xvfb -screen 0 ${SCREEN_WIDTH}x${SCREEN_HEIGHT}x24 "$@"

